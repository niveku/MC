#!/bin/bash

figlet "GnuPlot"
echo "====================================="
echo "Ingresar nombre del archivo csv:"
read nombre
echo "Ingresar la columna que representa el eje x:"
read x
echo "Ingresar la columna que representa el eje y:"
read y
gnuplot 
echo "set term qt"
echo "set datafile separator ",""
echo "plot "$nombre" using $x:$y"
gnuplot -persist
